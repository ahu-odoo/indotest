<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
         <record id="ir_cron_process_product_forecast" model="ir.cron">
            <field name="name">Process Products Forecasts</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
            <field name="model">product.product</field>
            <field name="function">_process_compute_forecast</field>
            <field name="args">()</field>
        </record>

        <record model="ir.actions.server" id="server_action_reload_stock_forecasts">
            <field name="name">Reload stock forecasts</field>
            <field name="model_id" ref="mrp_product_cost.model_product_product"/>
            <field name="state">code</field>
            <field name="code">env['product.product']._process_compute_forecast()</field>
        </record>
    </data>
</openerp>